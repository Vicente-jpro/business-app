<div id="<%= dom_id account %>">
  <p>
    <strong>Number:</strong>
    <%= account.number %>
  </p>

  <p>
    <strong>Money:</strong>
    <%= number_to_currency(account.money) %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= account.status %>
  </p>

  <p>
    <strong>User:</strong>
    <%= account.user.username %>
  </p>
 
    <% if account.status == "locked" or account.status == "blocked"  %> 
        <%= link_to "Activate account", change_account_status_path(account.number), class: "btn btn-success" %>
     <%else%>
      <%= link_to "Take money", withdraw_path(account.number), class: "btn btn-info"%>
      <%= link_to "Transfer money", transference_path(account.number), class: "btn btn-info"%>
      <%= link_to "lock account", change_account_status_path(account.number), class: "btn btn-danger" %> 
    <%end%>
 
  <hr>

</div>
